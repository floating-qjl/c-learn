#include<stdio.h>
#include<string.h>
void test()
{
	static int a = 1;//此时a为静态局部变量
	//static--修饰局部变量，延长局部变量生命周期
	//static--修饰全局变量，改变了变量的定义域，使静态的全局变量只能在自己的源文件内使用
	a++;
	printf("a=%d\n", a);//2 3 4 5 6


}
int main()
{
	int b = 0;
	while (b < 5)
	{
	
	test();
	b++;
	printf("b=%d\n", b);
}


	return 0;
}
