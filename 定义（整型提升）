#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
int main()
{
	char a = 0xb6;
	//10110110 - a
	short b = 0xb600;
	//1011011000000000 - b
	int c = 0xb6000000;
	//1011011000000000000000000000000 - c
	if (a==0xb6)
		//运算时，a会发生整型提升
		printf("a\n");
	if (b == 0xb600)
		//运算时，b会发生整型提升
		printf("b\n");
	if (c == 0xb6000000)
		printf("c\n");
	char d = 1;
	printf("%u\n", sizeof(d));//1
	printf("%u\n", sizeof(+d));//4
	//经行了运算，发生整型提升
	printf("%u\n", sizeof(!d));//1
	return 0;
}
