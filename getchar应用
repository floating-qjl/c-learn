#include<stdio.h>
#include<string.h>
int main()
{
	char password[20] = { 0 };
	int ch = 0;
	int ret = 0;
	printf("请输入密码:>");
	scanf("%s", password);
	//密码存储在password中
	//scanf如果读到空格键会停止
	while ((ch = getchar()) != '\n')
		//换行ascll值为10
		//循环使得清楚缓冲区（123456\n)
	{
	;
    }
	printf("是否确认:>(Y/N)");
	ret = getchar();
	
	if (ret == 'Y')
	{
		printf("密码已遗忘\n");
	}
	else if (ret == 'N')
	{
		printf("密码已销毁\n");
	}
	else
	{
		putchar(ret);
		printf("无法确认\n");

	}
	

	return 0;
}
